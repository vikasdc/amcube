<%- include('includes/header.ejs') %>
<body>
  <%- include('includes/nav.ejs') %>
<main>
  <div class="position-relative">
    <section class="section-shaped my-0" style="min-height:80vh">
      <div class="container container-lg">
           <div class="row mb-5">
            <div class="col-md-8 mx-auto mt-5 mb-5 px-5 py-4 shadow-sm">
                 <% if(success) { %>
                    <div class="mt-5 text-center">
                        <div class="alert alert-success bg-gradient-success" role="alert">
                            <h3 class="h3">Thanks For Reporting! We Will Fix It Soon. Your Thoughts Make Our Website Stronger EveryDay!  :) </h3>
                        </div>
                    </div>
                    <% } else { %>
                        <h4 class=" text-center mb-4">Report Bugs / Vulnerabilities In Our Website.</h4>
                        <form action="/bugreport" class="mt-3" method="POST"> 
                         <div class="form-group">
                            <label for="" class="h6"> Name</label>
                            <div class="input-group input-group-alternative">
                              <div class="input-group-prepend">
                                <div class="input-group-text text-default">
                                  <i class="fa fa-user" aria-hidden="true"></i>
                                </div>
                              </div>
                               <input type="text" name="name" placeholder="Enter Your New Username" value="<%= user.username %>" class="form-control text-default"  autocomplete="off">
                            </div>
                          </div>
                          <div class="form-group">
                           <label for="" class="h6">Email</label>
                           <div class="input-group input-group-alternative">
                             <div class="input-group-prepend">
                               <div class="input-group-text text-default">
                                 <i class="fa fa-envelope" aria-hidden="true"></i>
                               </div>
                             </div>
                               <input type="email" name="email"  placeholder="Enter Your New Email" class="form-control text-default" value="<%= user.email %>" autocomplete="off">
                           </div>
                         </div>
                         <div class="form-group">
                                 <label for="" class="h6">Bug Description</label>
                                 <div class="input-group input-group-alternative">
                                   <div class="input-group-prepend">
                                     <div class="input-group-text text-default">
                                       <i class="material-icons">bug_report</i>
                                     </div>
                                   </div>
                                  
                                     <textarea name="bugmessage" id="" cols="60" rows="4" placeholder="Bug Message"  required>
                                       
                                     </textarea>
                                 </div>
                               </div>
                         <div class="text-center mt-4">
                             <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                             <button class="btn btn-default btn-sm"" >Submit</button>
                         </div>
                        </form>
                        <% } %>
                </div>
           </div>
      </div>
    </section>
  </div>
</main>

<%- include('includes/end.ejs') %>
</body>

</html>