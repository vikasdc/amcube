<div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="modal1" aria-hidden="true">
    <div class="modal-dialog modal- modal-dialog-centered modal-" role="document">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="modal-title-default">Fill up the form to register</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">Ã—</span>
              </button>
          </div> 
          <div class="modal-body">
                <form action="/certification-course" method="post">
                <div class="form-group">
                  <label for="">Name</label>
                  <div class="input-group input-group-alternative">
                      <div class="input-group-prepend">
                        <div class="input-group-text text-dark">
                         <i class="material-icons">face</i>
                        </div>
                      </div>
                      <input type="text" name="name" class="form-control" placeholder="Name" required>
                    </div>
                </div>
                      <div class="form-group">
                        <label for="">Email</label>
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                              <div class="input-group-text text-dark">
                               <i class="material-icons">mail</i>
                              </div>
                            </div>
                            <input type="email" name="email" class="form-control" placeholder="Email" required>
                            
                          </div>
                          <small class="text-muted">We'll never share your email with anyone</small>
                      </div>
                          <div class="form-group">
                            <label for="">Phone</label>
                            <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                  <div class="input-group-text text-dark">
                                   <i class="material-icons">phone</i>
                                  </div>
                                </div>
                                <input type="number" name="phone" class="form-control" placeholder="Phone" required>
                              </div>
                          </div>
                              <div class="form-group">
                                <label for="">College</label>
                                <div class="input-group input-group-alternative">
                                    <div class="input-group-prepend">
                                      <div class="input-group-text text-dark">
                                       <i class="material-icons">school</i>
                                      </div>
                                    </div>
                                    <input type="text" name="college" class="form-control" placeholder="College Name" required>
                                  </div>
                              </div>
                              <div class="form-group">
                                <label for="">Your City</label>
                                <div class="input-group input-group-alternative">
                                    <div class="input-group-prepend">
                                      <div class="input-group-text text-dark">
                                       <i class="material-icons">my_location</i>
                                      </div>
                                    </div>
                                    <input type="text" name="city" class="form-control" placeholder="Present City" required>
                                  </div>
                              </div>
                                  <div class="form-group">
                                    <label for="">Parent's Phone</label>
                                    <div class="input-group input-group-alternative">
                                        <div class="input-group-prepend">
                                          <div class="input-group-text text-dark">
                                           <i class="material-icons">phone</i>
                                          </div>
                                        </div>
                                        <input type="number" name="parentphone" class="form-control" placeholder="Parent's Phone" required>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                    <label for="">Select Certification</label>
                                    <select name="certification" id="" class="form-control form-control-alternative" required>
                                        <option value="n/a">Certification Course</option>
                                        <option value="Full Stack Developer : Java">Full Stack Developer : Java</option>
                                        <option value="React Developer">React Developer</option>
                                        <option value="Python Developer">Python Developer</option>
                                        <option value="Back End Developer : Java + MySQL">Back End Developer : Java + MySQL</option>
                                        <option value="Back End Developer : JavaScript + MongoDB">Back End Developer : JavaScript + MongoDB</option>
                                        <option value="Full Stack Developer : PHP + MySQL">Full Stack Developer : PHP + MySQL</option>
                                    </select>
                                  </div>
                                  <div class="custom-control custom-checkbox mb-3">
                                      <input class="custom-control-input" id="customCheck2" type="checkbox" required>
                                      <label class="custom-control-label" for="customCheck2">By registering you accept <a href="/terms&privacy">terms&privacy</a></label>
                                    </div>
    
          </div>
    
          <div class="modal-footer pb-4 pt-2">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <button type="submit" class="btn btn-primary">Register</button>
              </form>
              <button type="button" class="btn btn-link  ml-auto" data-dismiss="modal">Close</button>
          </div>
      </div>
    </div>
    </div>