<%- include('../includes/header.ejs') %>
<body>
  <%- include('../includes/adminnav.ejs') %>
<main>
  <div class="position-relative">
    <section class="section-shaped my-0" style="min-height:80vh">
      <div class="container container-lg">
           <div class="row mb-5">
            <div class="col mt-5 mb-5 p-4 shadow-sm">
                          <div class="row">
                           <div class="col-md-10 mx-auto py-5">
                                <h3 class=" text-center text-capitalize">Hey <%=adminUser.username%>!</h3>
                             <h4 class=" mb-3 text-center">Welcome To Administration Dashboard!</h4>
                             <div class="row mt-5">
                               <div class="col-md-3 my-2 align-self-center">
                                   <div class="card shadow border-0 rounded">
                                       <div class="card-body bg-gradient-primary text-white text-center">
                                           <i class="fa fa-user fa-3x text-white" aria-hidden="true"></i>
                                      <h5 class="text-white text-center mt-2">REGISTERED USERS - <%= userLength %></h5>
                                      <div class="text-center">
                                         <a href="/admin/reg-users" class="btn btn-default btn-sm">MANAGE USERS</a>
                                      </div>
                                       </div>
                                   </div>
                               </div>
                               <div class="col-md-3 my-2">
                                    <div class="card shadow border-0 rounded">
                                        <div class="card-body bg-gradient-success text-center">
                                            <i class="fa fa-graduation-cap text-white fa-3x" aria-hidden="true"></i>
                                       <h5 class=" text-center text-white mt-2">COURSES - <%= courseLength %></h5>
                                       <div class="text-center">
                                          <a href="/admin/add-course" class="btn btn-default btn-sm">Add Courses</a>
                                         <div class="my-2">
                                          <a href="/admin/courses" class="btn btn-default btn-sm">View Courses</a>
                                         </div>
                                       </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 my-2">
                                        <div class="card shadow border-0 rounded">
                                            <div class="card-body bg-gradient-danger text-white text-center">
                                                <i class="fa fa-briefcase" style="font-size:3em"></i>
                                           <h5 class="text-white text-center mt-2">JOBS - <%= jobLength %></h5>
                                           <div class="text-center">
                                              <a href="/admin/add-job" class="btn btn-default btn-sm">Add jobs</a>
                                              <div class="my-2">
                                                <a href="/admin/jobs" class="btn btn-default btn-sm">View Jobs</a>
                                               </div>
                                           </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 my-2 align-self-center">
                                            <div class="card shadow border-0 rounded">
                                                <div class="card-body bg-gradient-info text-white text-center">
                                                    <i class="fa fa-sticky-note fa-3x text-white" aria-hidden="true"></i>
                                               <h5 class="text-white text-center mt-2">TESTS - <%= testLength %></h5>
                                               <div class="text-center">
                                                  <a href="/admin/add-test" class="btn btn-default btn-sm">Add Tests</a>  
                                                  <div class="my-2">
                                                    <a href="/admin/tests" class="btn btn-default btn-sm">View Tests</a>
                                                   </div>
                                               </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 my-2">
                                                <div class="card shadow border-0 rounded">
                                                    <div class="card-body bg-dark text-white text-center">
                                                        <i class="fa fa-first-order fa-3x text-white" aria-hidden="true"></i>
                                                   <h5 class="text-white text-center mt-2">TEST APPLICATIONS  <br><%= testApplicationLength %></h5>
                                                   <div class="text-center">
                                                      <a href="/admin/test-applications" class="btn btn-white btn-sm">View Applications</a>
                                                   </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3 my-2">
                                                <div class="card shadow border-0 rounded">
                                                    <div class="card-body bg-gradient-warning text-default text-center">
                                                        <i class="fa fa-first-order fa-3x text-default" aria-hidden="true"></i>
                                                   <h5 class="text-default text-center mt-2">COURSE APPLICATIONS  <br><%= courseApplicationLength %></h5>
                                                   <div class="text-center">
                                                      <a href="/admin/course-applications" class="btn btn-dark btn-sm">View Applications</a>
                                                   </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3 my-2">
                                                <div class="card shadow border-0 rounded">
                                                    <div class="card-body bg-gradient-yellow text-default text-center">
                                                        <i class="fa fa-first-order fa-3x text-default" aria-hidden="true"></i>
                                                   <h5 class="text-default text-center mt-2">JOB APPLICATIONS  <br><%= jobApplicationLength %></h5>
                                                   <div class="text-center">
                                                      <a href="/admin/job-applications" class="btn btn-dark btn-sm">View Applications</a>
                                                   </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3 my-2">
                                                    <div class="card shadow border-0 rounded">
                                                        <div class="card-body bg-success text-default text-center">
                                                            <i class="fa fa-first-order fa-3x text-default" aria-hidden="true"></i>
                                                       <h5 class="text-default text-center mt-2">Test Payments <br><%= tpl %></h5>
                                                       <div class="text-center">
                                                          <a href="/admin/test-payments" class="btn btn-dark btn-sm">View Payments</a>
                                                       </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            <div class="col-md-3 my-2 align-self-center">
                                                <div class="card shadow border-0 rounded">
                                                    <div class="card-body bg-prp text-white text-center">
                                                        <i class="fa fa-bug" style="font-size:3em"></i>
                                                   <h5 class="text-white text-center mt-2">Recruiter Applications <%= ral %></h5>
                                                   <div class="text-center">
                                                      <a href="/admin/recruiter-apps" class="btn btn-white btn-sm">View Applications</a>
                                                   </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3 my-2 align-self-center">
                                                    <div class="card shadow border-0 rounded">
                                                        <div class="card-body bg-gradient-default text-white text-center">
                                                            <i class="fa fa-bug" style="font-size:3em"></i>
                                                       <h5 class="text-white text-center mt-2">REPORTED BUGS <%= bal %></h5>
                                                       <div class="text-center">
                                                          <a href="/admin/bug-report-application" class="btn btn-white btn-sm">View Bugs</a>
                                                       </div>
                                                        </div>
                                                    </div>
                                                </div>
                             </div>
                           </div>
                         </div>
            </div>
           </div>
      </div>
    </section>
  </div>
</main>

<%- include('../includes/adminend.ejs') %>
</body>

</html>