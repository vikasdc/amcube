<%- include('includes/header.ejs') %>
<body>
  <%- include('includes/nav.ejs') %>
<main>
  <div class="position-relative">
    <section class="section-shaped my-0" style="min-height:80vh">
      <div class="container container-lg">
           <div class="row my-5">
                  <% if(path === '/jobappsuccess') { %>
                    <div class="col-md-7 text-center mx-auto bg-success mt-5 mb-5 p-4 shadow">
                        <i class="fa fa-thumbs-up text-default fa-4x" aria-hidden="true"></i> 
                   <h4 class="text-default">Your Job Application Is Success </h4>
                   <h5 class="text-dark">Your Application Id - <span class="bg-default text-white">#<%=jobAppId%></span></h5>
                   <h5 class="text-default">We're Reviewing Your Application! Please Send Your Resume to hello@amcubes.com</h5>
                   <h5 class="text-default">We Will Contact You Once The Reviewing of Application Is Complete</h5>
                </div>
                <% } else if(path === '/courseappsuccess') { %>
                  <div class="col-md-7 text-center mx-auto bg-success mt-5 mb-5 p-4 shadow">
                      <i class="fa fa-thumbs-up text-default fa-4x" aria-hidden="true"></i> 
                 <h4 class="text-default">Your Course Enrollment is Success!</h4>
                 <h5 class="text-dark">Your Enrollment Id - <span class="bg-default text-white">#<%=courseAppid%></span></h5>
                 <h5 class="text-default">We're Reviewing Your Enrollment! Please Contact Our Support - +91 7989564009</h5>
                </div>
                   <% } else if(path === '/jobappfailedpayment') { %>
                    <div class="col-md-7 text-center mx-auto bg-gradient-danger mt-5 mb-5 p-4 shadow">
                    <h5 class="text-white">It Seems You've Not Done The Payment For Appearing Test!</h5>
                    <h6 class="text-white">Kindly Please Make The Payment For Test And Then Apply For Job!</h6>
                    <h6 class="text-white"> If You Have Done The Payment Already You'll Be Able To Apply For Job With in 24 Hrs.</h6>
                    </div>
                    <% } else if(path === '/courseappfailedpayment') { %>
                      <div class="col-md-7 text-center mx-auto bg-gradient-danger mt-5 mb-5 p-4 shadow">
                      <h5 class="text-white">It Seems You've Not Done The Payment For Appearing Test!</h5>
                      <h6 class="text-white">Kindly Please Make The Payment For Test And Then Enroll into Course!</h6>
                      <h6 class="text-white"> If You Have Done The Payment Already You'll Be Able To Enroll into Course With in 24 Hrs.</h6>
                      </div>
                    <% } else if(path === '/jobappfailed') { %>
                        <div class="col-md-7 text-center mx-auto bg-gradient-danger mt-5 mb-5 p-4 shadow">
                          <h3 class="text-white">You Must Apply For The Test Before Applying For Job</h3>
                          <h5 class="text-white">Have a Nice Day <%=user.username%>!</h5>
                          <div class="text-center my-2">
                            <a href="/tests" class="btn btn-default bg-gradient-default btn-sm">Apply For Test</a>
                          </div>
                        </div>
                        <% } else if(path === '/courseappfailed') { %>
                          <div class="col-md-7 text-center mx-auto bg-gradient-danger mt-5 mb-5 p-4 shadow">
                            <h5 class="text-white">You Must Apply For The Test Before Enrolling into Course</h5>
                            <h6 class="text-white">Have a Nice Day <%=user.username%>!</h6>
                            <div class="text-center my-2">
                              <a href="/tests" class="btn btn-default bg-gradient-default btn-sm">Apply For Test</a>
                            </div>
                          </div>
                        <% } else if(path === '/testappfailedprofile') { %>
                          <div class="col-md-7 mx-auto bg-gradient-danger mt-5 mb-5 p-4 shadow-sm">
                              <h3 class="text-center text-default">Please Complete Your Profile Including Atleast Personal And Educational Details</h3>
                              </div> 
                              <% } else if(path === '/testappfailedpersonal') { %>
                                <div class="col-md-7 mx-auto bg-gradient-danger mt-5 mb-5 p-4 shadow-sm">
                                    <h3 class="text-center text-default">Please Complete Your Profile Personal Details</h3>
                                    </div>
                                    <% } else if(path === '/testappfailededucational') { %>
                                      <div class="col-md-7 mx-auto bg-gradient-danger mt-5 mb-5 p-4 shadow-sm">
                                          <h3 class="text-center text-default">Please Complete Your Profile Educational Details</h3>
                                          </div>   
                    <% } else { %>
                        <div class="col-md-7 mx-auto bg-gradient-danger mt-5 mb-5 p-4 shadow-sm">
                            <h3 class="text-center text-default">Please Complete Your Profile Including Atleast Personal And Educational Details</h3>
                            </div>    
                            <% } %>
           </div>
      </div>
    </section>
  </div>
</main>

<%- include('includes/end.ejs') %>
</body>

</html>