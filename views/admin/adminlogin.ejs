<%- include('../includes/header.ejs') %>
</head>
<body>
  <%- include('../includes/nav.ejs') %>
<main>
  <div class="position-relative" style="min-height: 80vh;">
    <section class="section-shaped my-0">
      <div class="shape shape-style-1 shape-primary" style="background-image: url('../../assets/img/exam.jpeg');background-size:cover;background-repeat: no-repeat; filter: brightness(46%);">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
      </div>
      <div class="container container-lg shape-container d-flex">
        <div class="col px-0" style="margin-top:200px">
          <div class="row">
            <div class="col-lg-5 mx-auto mt-0 mt-lg-5" id="login">
              <div class="card shadow bg-dark">
                <div class="card-body text-white">
                  <h3 class="text-center my-2 text-white">Login to Admin Panel</h3>
                 <form action="/admin/login" method="post">
                  <div class="form-group ">
                    <label for="name">Email</label>
                    <div class="input-group input-group-alternative">
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <i class="fa fa-envelope text-dark"></i>
                        </div>
                      </div>
                      <input type="email" name="email" id="" class="form-control form-control-alternative" placeholder="Your Email..">
                    </div>
                  </div>
                  <div class="form-group ">
                    <label for="password">Password</label>
                    <div class="input-group input-group-alternative">
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <i class="fa fa-lock text-dark"></i>
                        </div>
                      </div>
                      <input type="password" name="password" id="" class="form-control form-control-alternative" placeholder="Your Password">
                    </div>
                  </div>
                  <div class="text-center">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-danger bg-gradient-danger btn-sm my-3" type="submit">Login</button>
                  </div>
                </form>
                </div>
              </div>
             </div>

  </div>

</main>
<%- include('../includes/adminend.ejs') %>
</body>

</html>