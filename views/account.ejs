                    </div>
                  </div>
                  <form action="/edit-account" method="post">
                    <div class="float-right"> 
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button class="btn btn-default btn-sm" <%= edit === true ? 'disabled':''  %> >Edit Details</button>
                    </div>
                 </form>
                   <form action="/account" class="mt-3" method="POST"> 
                    <div class="form-group">
                       <label for="" class="h6">User Name</label>
                       <div class="input-group input-group-alternative <%=validationErrors.find(e => e.param === 'username') ? 'has-danger':'' %>">
                         <div class="input-group-prepend">
                           <div class="input-group-text <%=validationErrors.find(e => e.param === 'username') ? 'text-warning':'text-black' %>">
                             <i class="fa fa-user" aria-hidden="true"></i>
                           </div>
                         </div>
                          <input type="text" name="username"  autocomplete="name" <%= edit === true ? '':'disabled'  %> placeholder="Enter Your New Username" value="<%= user.username %>" class="form-control text-default" required>
                       </div>
                     </div>
                     <div class="form-group">
                      <label for="" class="h6">Email</label>
                      <div class="input-group input-group-alternative <%=validationErrors.find(e => e.param === 'email') ? 'has-danger':'' %>">
                        <div class="input-group-prepend">
                          <div class="input-group-text  <%=validationErrors.find(e => e.param === 'email') ? 'text-warning':'text-black' %>">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                          </div>
                        </div>
                       
                          <input type="email" name="email" autocomplete="email"  <%= edit === true ? '':'disabled'  %> placeholder="Enter Your New Email" class="form-control text-default" value="<%= user.email %>" required>
                        
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="" class="h6">Contact</label>
                      <div class="input-group input-group-alternative <%=validationErrors.find(e => e.param === 'contact') ? 'has-danger':'' %>">
                        <div class="input-group-prepend">
                          <div class="input-group-text  <%=validationErrors.find(e => e.param === 'contact') ? 'text-warning':'text-black' %>">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                          </div>
                        </div>
                       
                          <input type="tel" name="contact" autocomplete="tel" required  <%= edit === true ? '':'disabled'  %> placeholder="Enter Your New Contact Number" class="form-control text-default" value="<%= user.contact %>">
                        
                      </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="h6">Password</label>
                        <div class="input-group input-group-alternative <%=validationErrors.find(e => e.param === 'password') ? 'has-danger':'' %>">
                          <div class="input-group-prepend">
                            <div class="input-group-text  <%=validationErrors.find(e => e.param === 'password') ? 'text-warning':'text-black' %>">
                              <i class="fa fa-lock" aria-hidden="true"></i>
                            </div>
                          </div>
                            <input type="password" name="password"  autocomplete="new-password" placeholder="Enter Your New Password"  <%= edit === true ? '':'disabled'  %> class="form-control text-default" value="<%= user.password %>" required>
                        </div>
                      </div>
